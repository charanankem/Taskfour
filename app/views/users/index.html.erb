                    </svg>
                <%end%>
                <p><%= following.first_name%></p>
                <%@follow=current_user.given_follows.find_by(followed_user_id: following.id).id%>
                <%= button_to "Un Follow", follow_path(@follow),method: :delete,class:"css-button-sharp--red" %>
            </div>
        <%end%>
